<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/backgray"
    android:orientation="vertical"
    tools:context=".views.PharmaciesNotVisitActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bluebtn"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/search"
            android:text="بحث"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/total_not_visit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:minWidth="120dp"
            android:padding="4dp"
            android:text="Total Hold: "
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:hint="ابحث باسم او كود الصيدلية"
        android:padding="4dp"
        android:textColor="#000"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pharmacies_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>