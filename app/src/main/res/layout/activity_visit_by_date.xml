<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context=".views.VisitByDateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bluebtn"
            android:gravity="center"
            android:text="Quality User Visits"
            android:textColor="#fff"
            android:textSize="20sp" />

        <CalendarView
            android:id="@+id/calender"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#363535"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:theme="@style/CalenderViewCustom"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#E77C6C" />


        <LinearLayout
            android:id="@+id/linear_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/visit_by_branch"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bluebtn"
                android:padding="4dp"
                android:text="Visits By Branch"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp" />

            <!--<DatePicker-->
            <!--android:id="@+id/date_picker"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="105dp"-->
            <!--android:calendarViewShown="false"-->
            <!--android:scaleX="0.60"-->
            <!--android:scaleY="0.60" />-->
            <!--<TimePicker-->
            <!--android:id="@+id/time_picker"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="105dp"-->
            <!--android:scaleX="0.60"-->
            <!--android:scaleY="0.60"-->
            <!--android:layout_marginLeft="-55dp"-->
            <!--android:layout_marginTop="-30dp"-->
            <!--android:layout_marginRight="-50dp"-->
            <!--android:layout_marginBottom="-30dp" />-->


            <Button
                android:id="@+id/all_visits"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bluebtn"
                android:padding="4dp"
                android:text="All Visits"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>