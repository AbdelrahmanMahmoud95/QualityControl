<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/backgray"
    tools:context=".views.AdminActivity">

    <ImageView
        android:id="@+id/log_out"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/exit_black" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:minWidth="120dp"
        android:padding="4dp"
        android:text="Welcome Admin"
        android:textColor="#000"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_margin="4dp"
        android:background="@drawable/round_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:text="الشركة: "
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="الاهداف "
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/goals2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goals"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="0"
            android:textColor="#C21B1B"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="المحقق"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/target2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/target"
            android:padding="8dp"
            android:text="0"
            android:textColor="#C21B1B"
            android:textSize="22sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/admin_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginBottom="10dp" />

</RelativeLayout>